<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.zli.watermarker">

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/watermark_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/watermark_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Watermarker">
        <activity android:name=".SaveAndShare"></activity>
        <activity android:name=".EditPicture" />
        <activity android:name=".ChooseWatermark" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>